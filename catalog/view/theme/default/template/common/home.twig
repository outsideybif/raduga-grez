{{ header }}




<main-header class="main-header">
   <div class="main-header__background"><img class="background rellax" data-scroll="" data-scroll-speed="-2" src="./catalog/view/theme/default/assets/images/main-background.png"></div>
   <div class="toys toys_as_art">
      <h1 class="main_title header">{{ main_title }}</h1>
      <video autoplay="" loop="" muted="" playsinline=""><source src="{{main_video}}"></video>
     <a class="toys__action" href="{{ main_button_link }}">
         <circle-button class="circle-button white">
            {{ main_button_text }}
         </circle-button>
      </a>
   </div>
</main-header>




<main-about-us class="main-about-us block-layout">
   <div class="main-about-us__title">{{ about_small_title }}</div>
   <div class="main-about-us__content">
      <div class="main-about-us__left-side">
         <h2 class="main-about-us__subtitle first__title" data-scroll="" data-scroll-speed="1.5" data-mobile-disable="false">{{ about_title }}</h2>
         <div class="main-about-us__text about-text-first" data-scroll="" data-scroll-speed="1.5" data-mobile-disable="false">{{ about_first_text }}</div>
         <img data-scroll="" data-scroll-speed="1.2" class="rellax" src="/image/{{ about_left_image }}" data-mobile-disable="false">
      </div>
      <div class="main-about-us__center"><img src="/image/{{ about_center_image }}"></div>
      <div class="main-about-us__right-side">
         <img data-scroll="" data-scroll-speed="1.5" src="/image/{{ about_right_image }}" data-mobile-disable="false">
         <div class="main-about-us__text about-text-second" data-scroll="" data-scroll-speed="1.5" data-mobile-disable="false">{{ about_second_text }}</div>
         <a href="{{ about_button_link }}" class="dark">
           	<circle-button class="circle-button" data-scroll="" data-scroll-speed="1.5" data-mobile-disable="false">
            	{{ about_button_text }}
         	</circle-button>
        </a>
           
      </div>
   </div>
</main-about-us>







